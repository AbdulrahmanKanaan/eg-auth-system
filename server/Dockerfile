FROM node:20.18-alpine AS build

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

############################################################ 

FROM node:20.18-alpine

WORKDIR /app

COPY --from=build /app/package*.json ./

RUN npm install --omit=dev

COPY --from=build /app/dist ./dist

EXPOSE ${PORT:-3000}

CMD ["node", "dist/main"]